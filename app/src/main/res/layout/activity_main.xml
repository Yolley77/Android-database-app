<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#3C3F41">
    <Button
            android:text="Смотреть"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/seeButton" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/addButton" android:fontFamily="cursive" android:textStyle="bold"
            android:textAlignment="center" android:textSize="14sp" android:layout_marginTop="283dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="130dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Добавлять"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/addButton" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/changeButton" android:fontFamily="cursive"
            android:textStyle="bold" android:textAlignment="center" android:textSize="14sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/seeButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="130dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="131dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Менять"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/changeButton" android:layout_marginBottom="272dp"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="cursive" android:textStyle="bold"
            android:textAlignment="center" android:textSize="14sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/addButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="130dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>